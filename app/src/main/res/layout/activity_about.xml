<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <TextView
                android:id="@+id/textAboutStart"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre:"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textAbout"
                android:layout_width="300sp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Aplicativo desenvolvido por alunos do Insper em projeto conjunto com a TruckPad."
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textAboutStart"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="30sp"/>

            <TextView
                android:id="@+id/textAuthors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvedores:"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textAbout" />

            <TextView
                android:id="@+id/textAuthor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caio Fauza"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textAuthors"
                android:layout_marginTop="15sp"
                />

            <TextView
                android:id="@+id/textAuthor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gabriel Zanetti"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textAuthor1"
                android:layout_marginTop="15sp"
                />

            <TextView
                android:id="@+id/textAuthor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gustavo Braga"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textAuthor2"
                android:layout_marginTop="15sp" />

            <TextView
                android:id="@+id/textAuthor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samuel Porto"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textAuthor3"
                android:layout_marginTop="15sp"
                />




        </RelativeLayout>


    </ScrollView>

    <ListView
        android:id="@+id/sideBarListAbout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@color/colorSideBar"/>

</android.support.v4.widget.DrawerLayout>