<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <TextView
                android:id="@+id/textHelpStart"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajuda:"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textAbout"
                android:layout_width="300sp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Este aplicativo tem como objetido verificar o valor do frete oferecido, de acordo com as normas da ANTT."
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textHelpStart"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="30sp"/>

            <TextView
                android:id="@+id/textTopics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passo a passo"
                android:layout_marginBottom="20sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textAbout" />

            <TextView
                android:id="@+id/textPass1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para verificar seu frete:"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textTopics" />

            <TextView
                android:id="@+id/textPass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 -Selecione o tipo de carga"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textPass1" />

            <TextView
                android:id="@+id/textPass3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 -Selecione a quantidade de eixos"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textPass2" />

            <TextView
                android:id="@+id/textPass4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3- Selecione o endereço de partida"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textPass3" />
            <TextView
                android:id="@+id/textPass5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4- Selecione o endereço de destino"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textPass4" />
            <TextView
                android:id="@+id/textPass6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5- Selecione se existe carga de retorno."
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textPass5" />

            <TextView
                android:id="@+id/textPass7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6- Pressione o botao validar"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/textPass6" />






        </RelativeLayout>


    </ScrollView>

    <ListView
        android:id="@+id/sideBarListHelp"
        android:layout_width="260sp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        android:background="@drawable/gradientbar" />

</android.support.v4.widget.DrawerLayout>